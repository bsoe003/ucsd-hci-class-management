<div class="container">
  <div class='row'>
    <%= link_to "Back", submissions_path(:studio_id=>@studio.id, :assignment_id=>@assignment.id)%>
  </div>
  <table class='table'>
    <thead>
      <tr>
        <th>Submission</th>
        <% @assignment.rubric_fields.each do |field|%>
          <th><%= field.name%></th>
        <% end %>
      </tr>
    </thead>

    <% @assignment.rubric_fields.count.times {@submission.grading_fields.build} if @submission.grading_fields.count == 0%>
    <%= form_for @submission, :method=>:patch do |f|%>
      <tbody>
        <tr>
          <td>
            <%= link_to "#{@submission.student.name} | #{@submission.attachment_file_name}", @submission.attachment.url, :target=>"_blank"%>
          </td>
          <%= f.fields_for :grading_fields do |builder|%>
            <td>
              <div class='form-group'>
                <%= builder.number_field :score, :min=>0, :max=>3, :class=>"form-control input-sm", :placeholder=>"score"%>
              </div>
              <div class='form-group'>
                <%= builder.text_area :comment, :class=>"form-control input-sm", :placeholder=>"comment"%>
              </div>
            </td>
          <% end %>
        </tr>
        <tr>
          <td>
            <div class='form-group'>
              <%= f.submit "Submit", :class=>"btn btn-primary"%>
            </div>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>

</div>
